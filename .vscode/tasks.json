{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Flask backend",
			"type": "shell",
			"command": "${workspaceFolder}\\run_backend.bat",
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^.*$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*Running on.*",
					"endsPattern": ".*Press CTRL\\+C.*"
				}
			}
		}
	]
}